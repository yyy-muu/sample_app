<% if @feed_items.any? %>
  <ol class="microposts">
    
    <!--@feed_itemsの各要素がMicropostクラスを持っていたため-->
    <!--RailsはMicropostのパーシャルを呼び出す-->
    <!--対応する名前のパーシャルを、渡されたリソースのディレクトリ内から探しにいく-->
    <%= render @feed_items %>
  </ol>
  <%= will_paginate @feed_items,
                    params: { controller: :static_pages, action: :home }%>
<% end %>